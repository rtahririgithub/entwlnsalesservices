	<properties>
		<telus.javac.source>1.6</telus.javac.source>
		<telus.javac.target>1.6</telus.javac.target>
	</properties>

	<build>
		<finalName>ucss-common-${project.version}</finalName>
	</build>
	
    <profiles>
		<profile>
			<id>Javadoc</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
			<properties>
				<maven.javadoc.skip>false</maven.javadoc.skip>
				<attach>true</attach>
			</properties>
		</profile>
		<profile>
			<id>Sources</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
			<properties>
				<source.skip>false</source.skip>
				<source.attach>true</source.attach>
			</properties>
		</profile>
	</profiles>
</project>