<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>telus.csm.ewlnss-yaml</groupId>
		<artifactId>pom-ewlnss-yaml</artifactId>
		<version>v1-SNAPSHOT</version>
	</parent>

	<artifactId>ewlnss-PromotionQualification-yaml</artifactId>
	<name>ewlnss-PromotionQualification-yaml</name>	

	<dependencies>
		<dependency>
			<groupId>telus.csm.ewlnss-yaml</groupId>
			<artifactId>ewlnss-yaml-common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-annotations</artifactId>
		</dependency>
	</dependencies>
  
 	<build>
		<finalName>${project.name}-${project.version}</finalName>
		<plugins>

			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>3.3.4</version>
				<executions>
					<execution>
						<id>GenOpenapi</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${basedir}/src/main/resources/yamls/PromotionQualificationRESTSvc_v1_0_3.yaml</inputSpec>
							<output>${basedir}/target</output>
							<generatorName>spring</generatorName>
							<modelPackage>com.telus.csm.cpq.rest.domain</modelPackage>
							<generateApis>false</generateApis>
							<generateModels>true</generateModels>
							<generateModelTests>false</generateModelTests>
							<generateSupportingFiles>false</generateSupportingFiles> 
							<generateModelDocumentation>false</generateModelDocumentation>
							<verbose>false</verbose>
							<configHelp>false</configHelp>
							<configOptions>
								<serializableModel>true</serializableModel>
								<dateLibrary>joda</dateLibrary>
								<java8>false</java8>
								<useBeanValidation>false</useBeanValidation>
							</configOptions>
						</configuration>
					</execution>
				
				</executions>
			</plugin>

			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>maven-replacer-plugin</artifactId>
				<version>1.4.1</version>
				<executions>
					<execution>
						<id>replaceTokens</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>replace</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<basedir>${basedir}/target</basedir>
					<includes>
						<include>**/*.java</include>
					</includes>
					<regexFlags>
						<regexFlag>DOTALL</regexFlag>
					</regexFlags>
					<replacements>
						<replacement>
							<token>import io.swagger</token>
							<value>//import io.swagger</value>
						</replacement>
						<replacement>
							<token>@ApiModel</token>
							<value>//@ApiModel</value>
						</replacement>
						<replacement>
							<token>import org.joda.time</token>
							<value>import com.telus.csm.ewlnss.rest.time</value>
						</replacement>
					</replacements>
				</configuration>
			</plugin>
 			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.8</version><!--$NO-MVN-MAN-VER$-->
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/target/src/main/java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
		<resources>
			<resource>
				<directory>target/src/main/java</directory>
				<filtering>false</filtering>
			</resource>
		</resources>
	</build>
 
</project>